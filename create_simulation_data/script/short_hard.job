#!/bin/bash
#$ -S /bin/bash
#$ -N MockGenomePred
#$ -cwd
#$ -pe smp 24
#$ -e ./logfiles/mock_genome_short_hard.log
#$ -o ./logfiles/mock_genome_short_hard.log
#$ -V
#$ -m e

ROOT=${PWD}
READ=${ROOT}/data/short_hard/reads.fa
REFERENCE=${ROOT}/data/short_hard/mock_genome_ref.fa
OUTPUT=${ROOT}/result/short_hard/
CORES=24

# ----- Alignment -----
mkdir -p ${OUTPUT}/last_db
cd ${OUTPUT}/last_db
lastdb -R00 -Q0 reference ${REFERENCE}
last-train -P${CORES} -Q0 reference ${READ} > score.matrix
lastal -f tab -P${CORES} -R00 -Q0 -p score.matrix reference ${READ} > alignments.tab
cd ${ROOT}

# ----- Prediction ------
./target/release/predict_mockdata \
    ${READ} ${REFERENCE} ${OUTPUT}/last_db/alignments.tab random\
    > ${OUTPUT}/predictions_random.tsv

